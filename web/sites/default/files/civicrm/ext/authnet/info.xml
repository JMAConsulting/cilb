<?xml version="1.0"?>
<extension key="com.donordepot.authnetecheck" type="module">
  <file>authnetecheck</file>
  <name>Authorize.net</name>
  <description>Authorize.net Payment Processor</description>
  <urls>
    <url desc="Main Extension Page">https://lab.civicrm.org/extensions/authnet</url>
    <url desc="Documentation">https://lab.civicrm.org/extensions/authnet/-/blob/master/README.md</url>
    <url desc="Release Notes">https://docs.civicrm.org/authnetecheck/en/latest/releasenotes/</url>
    <url desc="Support">https://mjw.pt/support/authnet</url>
    <url desc="Licensing">http://civicrm.org/licensing</url>
  </urls>
  <license>AGPL-3.0</license>
  <authors>
    <author>
      <name>MJW</name>
      <email>info@mjwconsult.co.uk</email>
      <role>Maintainer</role>
    </author>
  </authors>
  <releaseDate>2025-12-05</releaseDate>
  <version>2.8.1</version>
  <develStage>stable</develStage>
  <compatibility>
    <ver>6.9</ver>
  </compatibility>
  <requires>
    <ext>mjwshared</ext>
  </requires>
  <civix>
    <namespace>CRM/AuthNetEcheck</namespace>
    <format>25.10.2</format>
  </civix>
  <mixins>
    <mixin>menu-xml@1.0.0</mixin>
    <mixin>mgd-php@2.0.0</mixin>
    <mixin>smarty@1.0.3</mixin>
    <mixin>scan-classes@1.0.0</mixin>
  </mixins>
  <classloader>
    <psr0 prefix="CRM_" path="."/>
    <psr4 prefix="Civi\" path="Civi"/>
  </classloader>
  <upgrader>CiviMix\Schema\Authnetecheck\AutomaticUpgrader</upgrader>
</extension>
