<?xml version="1.0"?>
<extension key="advanced-events" type="module">
  <file>advanced_events</file>
  <name>Advanced Events</name>
  <description>Improved Event and event template functionality for CiviCRM</description>
  <license>AGPL-3.0</license>
  <maintainer>
    <author>Matthew Wire</author>
    <email>mjw@mjwconsult.co.uk</email>
  </maintainer>
  <urls>
    <url desc="Main Extension Page">https://lab.civicrm.org/extensions/civicrm-advanced-events</url>
    <url desc="Support">https://mjw.pt/support/advancedevents</url>
    <url desc="Documentation">https://docs.civicrm.org/advancedevents/en/latest/</url>
    <url desc="Release Notes">https://docs.civicrm.org/advancedevents/en/latest/releasenotes/</url>
    <url desc="Licensing">http://www.gnu.org/licenses/agpl-3.0.html</url>
  </urls>
  <releaseDate>2025-11-27</releaseDate>
  <version>2.3.1</version>
  <develStage>stable</develStage>
  <compatibility>
    <ver>6.4</ver>
  </compatibility>
  <comments>Advanced functionality for Events</comments>
  <civix>
    <namespace>CRM/AdvancedEvents</namespace>
    <format>25.10.2</format>
  </civix>
  <mixins>
    <mixin>menu-xml@1.0.0</mixin>
    <mixin>mgd-php@2.0.0</mixin>
    <mixin>setting-php@1.0.0</mixin>
    <mixin>setting-admin@1.0.1</mixin>
    <mixin>entity-types-php@2.0.0</mixin>
    <mixin>smarty@1.0.3</mixin>
    <mixin>scan-classes@1.0.0</mixin>
  </mixins>
  <classloader>
    <psr0 prefix="CRM_" path="."/>
    <psr4 prefix="Civi\" path="Civi"/>
  </classloader>
  <upgrader>CiviMix\Schema\AdvancedEvents\AutomaticUpgrader</upgrader>
</extension>
