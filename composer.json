{
    "name": "drupal/recommended-project",
    "description": "Project template for Drupal projects with a relocated document root",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "homepage": "https://www.drupal.org/project/drupal",
    "support": {
        "docs": "https://www.drupal.org/docs/user_guide/en/index.html",
        "chat": "https://www.drupal.org/node/314178"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "civicrm/civicrm-core": "6.9.1",
        "civicrm/civicrm-drupal-8": "6.9.*",
        "civicrm/civicrm-packages": "6.9.*",
        "composer/installers": "^2.0",
        "drupal/bootstrap": "^3.35",
        "drupal/bootstrap_barrio": "^5.5",
        "drupal/civicrm_entity": "^4.0@beta",
        "drupal/civicrm_group_roles-civicrm_group_roles": "^1.3",
        "drupal/config_ignore": "^3.3",
        "drupal/core": "10.6.1",
        "drupal/core-composer-scaffold": "10.6.1",
        "drupal/core-project-message": "10.6.1",
        "drupal/core-recommended": "10.6.1",
        "drupal/entity_print": "^2.14",
        "drupal/lang_dropdown": "^2.1",
        "drupal/mail_login": "^4.0",
        "drupal/masquerade": "^2.0",
        "drupal/menu_per_role": "^1.8",
        "drupal/redirect_after_login": "^3.0",
        "drupal/redirect_page_by_role": "^3.2",
        "drupal/skinr": "^2.0@alpha",
        "drupal/smtp": "^1.4",
        "drupal/token": "^1.16",
        "drupal/user_email_verification": "^1.2",
        "drupal/webform": "^6.2",
        "drupal/webform_authorizenet": "^1.0",
        "drupal/webform_civicrm": "^6.2",
        "drush/drush": "^12.5",
        "mpdf/mpdf": "^8.2"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "drupal/core-composer-scaffold": true,
            "drupal/core-project-message": true,
            "phpstan/extension-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "php-http/discovery": true,
            "cweagans/composer-patches": true,
            "civicrm/civicrm-asset-plugin": true,
            "civicrm/composer-downloads-plugin": true,
            "civicrm/composer-compile-plugin": true
        },
        "sort-packages": true
    },
    "extra": {
  	"patches": {
        "civicrm/civicrm-core": {
            "Use Short date in find payments search": "./patches/search_ui_use_short_date_on_find_contribution.patch",
            "Allow for sending invoice when not logged in": "./patches/sending_invoice_when_not_logged_in.patch",
            "Use short date on manage exams screen": "./patches/manage_event_listing_short_date.patch",
            "Fix boot seqeunce": "./patches/fix_boot_sequence.patch",
            "Apply patch to trim entity ID search values": "patches/civicrm_trim_entity_id_search_value.patch",
            "Apply patch to fix issue with non admins accessing the civicrm user dashboard": "patches/civicrm_allow_non_admins_user_dashboard_access.patch",
            "Apply patches to core to support Monday, Wednesday, Friday Report": "patches/civicrm_report_fixes.patch",
            "Apply patches to civicrm event to support backoffice form links": "patches/civicrm_participant_links.patch",
            "Apply patch to download invoice": "patches/civicrm_invoice.patch",
            "Apply patch to support using transaction id in a quick search": "patches/civicrm_transaction_id_quicksearch.patch"
        },
        "drupal/entity_print": {
            "Issue #3063998: mPDF Plugin": "https://www.drupal.org/files/issues/2022-12-01/3063998-18.patch"
        },
        "drupal/user_email_verification": {
	        "Issue #3376165: Fatal error when 'rules' module is missing": "https://www.drupal.org/files/issues/2023-07-21/user_email_verification-rules_conditions-3376165-2.patch"
        },
        "drupal/webform_civicrm": {
            "Expose contribution ID for further post processing": "patches/webform_civicrm_expose_contribution_id.patch",
            "Delay contribution receipt send": "patches/webform_civicrm_delay_send_receipt.patch"
        },
        "drupal/civicrm_entity": {
            "Fix civicrm_event_en_MX crash": "patches/civicrm_entity_497.patch"
        }
    },
  	"drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            }
        },
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "web/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "web/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "web/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ]
        },
        "drupal-core-project-message": {
            "include-keys": [
                "homepage",
                "support"
            ],
            "post-create-project-cmd-message": [
                "<bg=blue;fg=white>                                                         </>",
                "<bg=blue;fg=white>  Congratulations, youâ€™ve installed the Drupal codebase  </>",
                "<bg=blue;fg=white>  from the drupal/recommended-project template!          </>",
                "<bg=blue;fg=white>                                                         </>",
                "",
                "<bg=yellow;fg=black>Next steps</>:",
                "  * Install the site: https://www.drupal.org/docs/installing-drupal",
                "  * Read the user guide: https://www.drupal.org/docs/user_guide/en/index.html",
                "  * Get support: https://www.drupal.org/support",
                "  * Get involved with the Drupal community:",
                "      https://www.drupal.org/getting-involved",
                "  * Remove the plugin that prints this message:",
                "      composer remove drupal/core-project-message"
            ]
        },
        "compile-whitelist": ["civicrm/civicrm-core", "civicrm/composer-compile-lib"],
        "enable-patching": "true"
    }
}
